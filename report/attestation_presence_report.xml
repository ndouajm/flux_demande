<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_attestation_presence" model="ir.actions.report">
        <field name="name">Attestation De Presence</field>
        <field name="model">attestation.presence</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">flux_demande.attestation_presence</field>
        <field name="report_file">flux_demande.attestation_presence</field>
        <field name="binding_model_id" ref="model_attestation_presence"/>
        <field name="binding_type">report</field>
    </record>


    <template id="attestation_presence">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <div class="page container">

                        <style>

                            .main_container{
                                max-width: 950px !important;
                                min-height: 65vh;
                            }

                            .content_header{
                                display: flex;
                                justify-content: center;
                            }

                            .header_attes{
                                border: 1px solid #000;
                                margin-top: 10px;
                                background-color: rgba(204, 204, 204, 0.688);
                                font-size: 30px;
                                box-shadow: 2px 2px 2px solid #000;
                                margin-left: 220px;
                                width: 450px;
                            }
                            strong{
                                margin-left: 10px;
                            }
                            
                            .souligne{
                                text-decoration: underline;
                            }

                        </style>
                        
                        <div class="container main_container relative">
                            <div class="container mb-3 row" style="font-size: 22px; margin-top: 15px;">
                                <div class=""><span>N*:</span> 000 <span></span>  </div>
                                <div class="" style="min-width: 320px; margin-left: 200px;"><span class="">/MICEN/DRH</span></div>
                                <div class="d-flex justify-content-end"><strong>Abidjan, le <span t-field="doc.request_date"/></strong></div>
                            </div>
                            <div class="content_header d-flex justify-content-center">
                                <h1 class="header_attes text-uppercase text-center py-2">attestation de presence</h1>
                            </div>
                            <div class="text-center">
                                <h1>
                                    <strong> <p><span t-field="doc.state"/></p> </strong>
                                </h1>
                            </div>

                            <div class="body_content_attes d-flex justify-content-center mt-4" style="font-size:25px;">
                                <div class="content">
                                    <p>
                                        <span class="text-muted">Le Directeur Des Ressources Humaines du Ministère de la communication et l'Economie Numerique, soussigné, atteste que Monsieur</span>
                                        <strong><span t-field="doc.employee_id" class="text-uppercase"/> <span><span t-field="doc.employee_id.prenom" class="text-uppercase"/></span></strong>,
                                        <strong><span t-field="doc.emploi" class="text-uppercase"/></strong>,
                                        <span class="text-muted">matricule</span>
                                        <strong><span t-field="doc.matricule" class="text-uppercase"/></strong>,
                                        <span class="text-muted">est effectivement en service à la</span> 
                                        <strong><span t-field="doc.direction" class="text-uppercase"/></strong> 
                                        <span class="text-muted">dudit Ministère depuis le</span> 
                                        <strong><span t-field="doc.date_start" class="text-uppercase"/></strong>.
                        
                                    </p>
                                    <p class="text-muted">
                                        En Foi de quoi, le présent attestation lui est délivré pour servir et valoir ce que le droit.
                                    </p>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end mt-4">
                                <strong>
                                    <p class="souligne mt-4">
                                        Alain KOMENAN
                                    </p>
                                    <p class="text-muted">Secrétaire Général de Préfecture</p>
                                </strong>
                            </div>
                            <div class="signature mt-4">
                                <p><strong class="souligne">Ampliations:</strong></p>
                                <ul>
                                    <li>Cabinet ........................... <span>01</span></li>
                                    <li>Intéressé(e) ...................... <span>01</span></li>
                                    <li>Chrono ............................ <span>01</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
