<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="espace_rh_view_form" model="ir.ui.view">
            <field name="name">espace.rh.view.form</field>
            <field name="model">espace.rh</field>
            <field name="arch" type="html">
                <form string="">
                    <style>

                        .o_form_view .o_form_sheet_bg > .o_form_sheet {
                            min-width: 100% !important;
                            min-height: 94vh !important;
                        }
                       

                        .o_web_client > .o_action_manager > .o_action > .o_control_panel {
                            display: none !important;
                        }

                        
                        .admin_h{
                            font-size: 50px !important;
                        }
                    </style>
                    <sheet>
                        <div class="container main-content offset-md-2 col-8">
                            <div class="content row " style="margin-top:150px; position: relative;">
                                <div class="col-md-3 logo-content">
                                    <div class="img">
                                        
                                    </div>
                                </div>
                                <div class="col-md-6 text-center ">
                                    <h1 class="admin_h text-uppercase d-flex justify-content-center">espace administrateur</h1>
                                    <h5>eDemande</h5>
                                    <p class="first-color"></p>
                                    <p class="tree-color"></p>
                                </div>

                                <div class="col-md-3">
                                    <strong class="d-flex justify-content-center text-center mt-3 text-capitalize px-4" 
                                    style="
                                    font-size:15px;
                                    flex-direction: column;
                                    ">
                                        <p class="my-0 py-0">ministère de la communication</p>
                                        <p class="my-0 py-0">et de</p>
                                        <p class="my-0 py-0">l'économie numerique</p>
                                    </strong>
                                </div>
                            </div>

                            <div class="container col-12 mx-0" 
                            style=" 
                            position: relative; 
                            width: 100% !important;
                            margin-bottom: 100px;">

                                <div class="row mb-4">
                                   
                                    <div class="col-md-3 ">
                                        <div class="card shadow content_data">
                                            <button name="lister_cert_prise_service"
                                                string="certificat de prise de service"
                                                type="object"
                                                class="content_btn"/>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card shadow content_data">
                                            <button name="lister_cert_reprise_service"
                                                string="Certificat De Reprise de Service"
                                                type="object"
                                                class="content_btn"/>

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card shadow content_data">
                                            <button name="lister_cert_travail"
                                                string="Certificat De Travail"
                                                type="object"
                                                class="content_btn"/>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card shadow content_data">
                                            <button name="lister_attestation_travail"
                                                string="Attestation De Travail"
                                                type="object"
                                                class="content_btn"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                
                                    <div class="col-md-4">
                                        <div class="card shadow content_data">
                                            <button name="lister_cessation_definitive"
                                                string="Cessation definitive de Service"
                                                type="object"
                                                class="content_btn"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card shadow content_data">
                                            <button name="lister_attestation_presence"
                                                string="Attestation De Presence"
                                                type="object"
                                                class="content_btn"/>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="card shadow content_data">
                                            <button name="lister_note_affectation"
                                                string="Note d'Affectation"
                                                type="object"
                                                class="content_btn"/>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="espace_rh_action" model="ir.actions.act_window">
            <field name="name">espace_rh.action</field>
            <field name="res_model">espace.rh</field>
            <field name="view_mode">form</field>
        </record>

        
    
    </data>
    

</odoo>
